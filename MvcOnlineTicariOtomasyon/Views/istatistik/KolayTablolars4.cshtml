@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifMarka>
@{ int sayi = 0;}
<div class="card-header">
    <h3 class="card-title">Marka Ürün Sayıları</h3>
</div>
<div class="card-body p-0">
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Marka</th>
                <th>Progress Bar</th>
                <th style="width: 40px">Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                sayi++;
                <tr>
                    <td>@sayi.</td>
                    <td>@x.Marka</td>
                    <td>
                        @if (x.Adet == 1)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: @x.Adet%"></div>
                            </div>
                        }
                        @if (x.Adet > 1)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-success" style="width: @x.Adet%"></div>
                            </div>
                        }

                    </td>
                    @if (x.Adet == 1)
                    {
                        <td><span class="badge bg-danger">@x.Adet</span></td>
                    }
                    @if (x.Adet > 1)
                    {
                        <td><span class="badge bg-success">@x.Adet</span></td>
                    }

                </tr>
            }
        </tbody>
    </table>
</div>
