@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifPersonel>
@{ int sayi = 0;}
<div class="card-header">
    <h3 class="card-title">Departman Personel Sayıları</h3>
</div>
<!-- /.card-header -->
<div class="card-body p-0">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Departman</th>
                <th>Progress</th>
                <th style="width: 40px">Sayı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                sayi++;
                <tr>
                    <td>@sayi.</td>
                    <td>@x.Departman</td>
                    <td>
                        <div class="progress progress-xs">
                            <div class="progress-bar bg-success" style="width: @x.Adet%"></div>
                        </div>
                    </td>
                    <td><span class="badge bg-success">@x.Adet</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- /.card-body -->
