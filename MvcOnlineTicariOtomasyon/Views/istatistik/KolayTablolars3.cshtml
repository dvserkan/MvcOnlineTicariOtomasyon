@using MvcOnlineTicariOtomasyon.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Urun>
@{ int sayi = 0;}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ürünler Tablosu</h3>

            <div class="card-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="CariAd" class="form-control float-right" placeholder="Ara">

                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ürün Adı</th>
                        <th>Ürün Kategorisi</th>
                        <th>Ürün Markası</th>
                        <th>Ürün Stoğu</th>
                        <th>Alış Fiyatı</th>
                        <th>Satış Fiyatı</th>
                        <th>Ürün Görseli</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        sayi++;
                        <tr>
                            <th>@sayi</th>
                            <td>@x.UrunAd</td>
                            <td>@x.Kategori.KategoriAd</td>
                            <td>@x.Marka</td>
                            <td>@x.Stok</td>
                            <td>@x.AlisFiyat.ToString("n2") ₺</td>
                            <td>@x.SatisFiyat.ToString("n2") ₺</td>
                            <td class="text-center"><img src="@x.UrunGorsel" style="width: 40px; height: 80px;" /></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
@Html.PagedListPager((IPagedList)Model, p => Url.Action("KolayTablolar", new { p }))
<link href="~/Content/PagedList.css" rel="stylesheet" />